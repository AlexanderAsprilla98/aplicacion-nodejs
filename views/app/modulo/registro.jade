extends ../../layout.jade
extends ../home.jade


block curso
  div(class="container")
    h1 Crear un nuevo curso
    div(class="container")
    strong
          p
          p Los campos marcados con * son obligatorios     
    

block formularioRegistro
  div(class="container")
   form(action="/app/modulo" method="POST")
     div(class="form-row")

        div.form-group.col-md-3
         label(for="id") Id*
         input(type="text" name="id_curso" placeholder="Escribe un numero para el curso" id="id" maxlength="2" required onkeypress='return event.charCode >= 48 && event.charCode <= 57'  class="form-control" pattern="[0-9]{0,1}[^A-Za-z]" title="Numeros. Minimo 1 digito. Maximo 2 digitos")

        div.form-group.col-md-3
         label(for="nombre") Nombre*
         input(type="text" id="nombre" name="nombre" placeholder="Nombre del curso" required class="form-control")
       
        div.form-group.col-md-3
         label(for="modalidad") Modalidad
         select(id="modalidad" name="modalidad" class="form-control")

           option Seleccione una opcion
           option Presencial
           option Virtual

        div.form-group.col-md-2
         label(for="valor") Valor*
         input(type="text" id="valor" name="valor"  placeholder="Valor" class="form-control" required maxlength="7" onkeypress='return event.charCode >= 48 && event.charCode <= 57' pattern="[0-9]{1,6}[^A-Za-z]\." title="Numeros. Minimo 3 cifras. Maximo 7 cifras")

        div.form-row
         div.form-group.col-md-6
           label(for="mensaje") Descripcion*
           textarea(type="text" id="mensaje" name="descripcion" placeholder="Ingrese descripcion" required class="form-control")
       
        div.form-group.col-md-2
         label(for="intensidad") Intensidad horaria
         input(type="text" id="intensidad" name="intensidad" placeholder="Intensidad" class="form-control" maxlength="3"   onkeypress='return event.charCode >= 48 && event.charCode <= 57' pattern="[0-9]{1,3}[^A-Za-z]" title="Numeros. Minimo 1 cifras. Maximo 3 cifras")

       div.form-group.col-md-8
         input(type="submit" value="Crear" data-toggle="modal" data-target="#exampleModal" class="btn btn-primary btn-lg")